$(document).ready(function() {
	$("#tijiao").bind("click", function() {
		$.ajax({
			type : "post",
			async : true,
			url : "login",
			data : {
				userName : $("#userName").val(),
				pwd : $("#pwd").val()
			},
			dataType : "json",
			success : function(result) {

				if (result == "success") {
					location.href = "page/school/index.html";
				} else if (result == "1") {
					$(".error").text("用户不存在");
				} else if (result == "2") {
					$(".error").text("密码错误");
				}
			},
			error : function(errorMsg) {

			}
		})
	});
});