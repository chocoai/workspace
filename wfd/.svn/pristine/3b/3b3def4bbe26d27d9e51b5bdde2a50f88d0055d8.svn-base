  <select id="getPostMessagesByPostId"  resultMap="ResultMapWithBLOBs">
    SELECT tpm.id id,tpm.plate_post_id,tpm.user_id user_id,tpm.is_read,tpm.is_top,tpm.create_time,tpm.update_time,tpm.content,tpmi.down_url,tpm.receiver receiver,tu2.name receiverName,
    tu.user_type user_type,tpm.is_top is_top,tpml2.likeNum like_count,tu.name user_name,tpml4.post_message_id messageName,tpmi.id img_id,tu.logo_url logo_url,tpma.down_url audio_down_url,
    tpma.audio_usetaking audio_usetaking
    from t_post_message tpm
    left JOIN  t_post_message_img tpmi on tpmi.post_message_id = tpm.id
    left JOIN (select tpml.post_message_id,COUNT(tpml.post_message_id)likeNum  from t_post_message_like tpml GROUP BY tpml.post_message_id )tpml2 on tpml2.post_message_id= tpm.id
    left JOIN t_user tu on tu.id = tpm.user_id
    left JOIN t_user tu2 on tu2.id = tpm.receiver
    left JOIN (select * from t_post_message_like tpml3 where tpml3.user_id =#{userId})tpml4 on tpml4.post_message_id = tpm.id
    left join t_post_message_audio tpma on tpma.post_message_id = tpm.id
    WHERE tpm.is_delete = 0  and tpm.plate_post_id =#{postId}
    
   	<if test="orderByClause == null">
   		order by tu.user_type desc,tpm.is_top desc
   	</if>	
   		
    <if test="orderByClause != null">
       order by ${orderByClause}
    </if>
  </select>

  <select id="getPostMessagesByUserId" parameterType="java.lang.Integer" resultMap="ResultMapWithBLOBs">
    SELECT tm.*,tpp.content postContent,tu.name messageName,tu.logo_url logo_url
    from t_post_message tm
    left JOIN  t_plate_post tpp on tpp.id =tm.plate_post_id
    left join t_user tu on tu.id = tm.user_id
    WHERE tm.is_delete = 0  and tpp.creator =#{userId} and tpp.is_delete=0
    order by tm.create_time desc
  </select>
