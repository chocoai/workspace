  <update id="updateMessageIsRead" parameterType="java.lang.Integer">
    update t_post_message tpm
    LEFT JOIN t_plate_post tpp on tpm.plate_post_id = tpp.id
    set  tpm.is_read = 1 WHERE tpp.creator=#{userId}
  </update>
  <select id="getReply" parameterType="java.lang.Integer" resultMap="ResultMapWithBLOBs">
    select tufm.create_time as favorite_time,tu.user_type,tpm.id id,tpm.plate_post_id,tpm.user_id user_id,tpm.is_read,tpm.is_top,tpm.create_time,tu.logo_url logo_url,
    tpm.update_time,tpm.content,tpm.receiver ,tu.name user_name,tpp.content postContent
    FROM  t_post_message tpm
    LEFT JOIN t_plate_post tpp on tpm.plate_post_id = tpp.id
    LEFT JOIN t_user tu on tu.id = tpm.user_id
    INNER JOIN t_post_message_alt tpma on tpma.message_id = tpm.id
    left join t_user_favorite_message tufm on tufm.post_message_id = tpm.id
    where tpma.alt_user_id = #{userId,jdbcType=INTEGER} and tpm.is_delete=0 and tpp.is_delete=0
</select>
