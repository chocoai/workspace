<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.fxzhj.mapper.TypeMapper">
	<resultMap id="BaseResultMap" type="com.fxzhj.model.Type">
		<id column="id" property="id" jdbcType="BIGINT" />
		<result column="value" property="value" jdbcType="VARCHAR" />
		<result column="type" property="type" jdbcType="INTEGER" />
		<result column="content" property="content" jdbcType="VARCHAR" />
	</resultMap>
	
	<sql id="Base_Column_List">
		id, value, type, content
	</sql>
	
	<!-- 二维码绑定类型 -->
	<select id="showCombobox" resultMap="BaseResultMap" >
		select
		<include refid="Base_Column_List" />
		from t_type 
		order by id 
	</select>
	
	<!-- 查询类型为2的content -->
	<select id="queryByType" resultType="java.lang.String" parameterType="java.lang.Integer">
		select content from t_type where type = #{0} 
	</select>
	
	<cache />
</mapper>