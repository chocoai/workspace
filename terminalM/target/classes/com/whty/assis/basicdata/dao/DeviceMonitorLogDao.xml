<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whty.assis.basicdata.dao.DeviceMonitorLogDao">
	
	<resultMap type="com.whty.assis.basicdata.model.DeviceMonitorLog" id="DeviceInfoResult">
		<result property="deviceId" column="device_id" />
		<result property="path" column="path" />
		<result property="ip" column="ip" />
		<result property="aliIotId" column="ali_iot_id" />
		<result property="aliDeviceName" column="ali_device_name" />
		<result property="aliProductKey" column="ali_product_key" />
		<result property="clientVersion" column="client_version" />
		<result property="aliDeviceSecret" column="ali_device_secret" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="id" column="id" />
	</resultMap>
	
	<select id="listByCondition" parameterType="map" resultMap="DeviceInfoResult">
		select * from t_device_monitor_log where 1=1
		<if test="deviceId != null and deviceId !='' ">and device_id=#{deviceId}</if>
		order by create_time desc
	</select>
	
	
	<select id="loadByDeviceLast" parameterType="map" resultMap="DeviceInfoResult">
		select * from t_device_monitor_log where device_id=${deviceId} order by create_time desc  limit 1
	</select>
	
</mapper>