<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.whty.assis.basicdata.dao.DictDataDao">

	<resultMap type="com.whty.assis.basicdata.model.DictData" id="DictTypeResult">
		<id property="id" column="id" />
		<result property="typeId" column="type_id" />
		<result property="name" column="name" />
		<result property="createTime" column="create_time" />
		<result property="updateTime" column="update_time" />
		<result property="value" column="value" />
		
		<result property="creator" column="creator" />
		<result property="creatorName" column="creator_name" />
	</resultMap>
	
	<insert id="save" parameterType="com.whty.assis.basicdata.model.DictData">
		insert into t_dict_data(
			type_id,
			name,
			value,
			create_time,
			update_time,
			creator
			
			) values (
				#{typeId},
				#{name},
				#{value},
				#{createTime},
				#{updateTime},
				#{creator}
			)
	</insert>
	
	<update id="update" parameterType="com.whty.assis.basicdata.model.DictData">
		update t_dict_data 
		set 
		<trim prefixOverrides=",">
			<if test="updateTime != null ">, update_time=#{updateTime}</if>
			<if test="value != null and value != ''">, value=#{value}</if>
		</trim>
		where id=#{id}
	</update>
	
	<select id="listByCondition" parameterType="map" resultMap="DictTypeResult">
		select t1.*,t2.user_name as creator_name from t_dict_data t1 left join ta_manage_user_info t2 on t1.creator=t2.id
		where 1=1
		<if test="id != null ">and t1.id=#{id}</if>
		<if test="typeId != null ">and t1.type_id=#{typeId}</if>
		<if test="name != null ">and t1.name=#{name}</if>
		order by t1.create_time desc
	</select>
	
</mapper>
