<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yhcrt.demo.dao.SysUserDao">
    <resultMap id="baseMap" type="com.yhcrt.demo.model.SysUser">
        <result property="id" column="id"/>
        <result property="userName" column="user_name"/>
        <result property="password" column="password"/>
        <result property="realName" column="real_name"/>
        <result property="tel" column="tel"/>
        <result property="email" column="email"/>
        <result property="lastLoginTime" column="last_logintime"/>
        <result property="role" column="role"/>
    </resultMap>

    <sql id="column">
        id, user_name, password, real_name, tel, email,last_logintime,role
    </sql>

    <select id="getByUserName" resultMap="baseMap" parameterType="string">
        SELECT <include refid="column"/>
        FROM sys_user 
        WHERE user_name = #{userName,jdbcType=VARCHAR}
      	LIMIT 1
    </select>
    
    <update id="update" parameterType="com.yhcrt.demo.model.SysUser">
        UPDATE sys_user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="realName != null and realName != ''">
                real_name = #{realName},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="lastLoginTime != null and lastLoginTime != ''">
                last_logintime = #{lastLoginTime},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
        </set>
        <where>
                id = #{id}
        </where>
    </update>

    <update id="updateBySelected" parameterType="com.yhcrt.demo.model.SysUser">
        UPDATE sys_user
        SET user_name = #{userName},
             password = #{password},
             real_name = #{realName},
             tel = #{tel},
             email = #{email},
             last_logintime = #{lastLoginTime},
             role = #{role}
         WHERE id = #{id}
    </update>

    <insert id="insert" parameterType="com.yhcrt.demo.model.SysUser">
        INSERT INTO sys_user
        <set>
            <if test="userName != null and userName != ''">
                user_name = #{userName},
            </if>
            <if test="password != null and password != ''">
                password = #{password},
            </if>
            <if test="realName != null and realName != ''">
                real_name = #{realName},
            </if>
            <if test="tel != null and tel != ''">
                tel = #{tel},
            </if>
            <if test="email != null and email != ''">
                email = #{email},
            </if>
            <if test="lastLoginTime != null and lastLoginTime != ''">
                last_logintime = #{lastLoginTime},
            </if>
            <if test="role != null and role != ''">
                role = #{role},
            </if>
        </set>
    </insert>

    <select id="getByUserNameAndPassword" resultMap="baseMap" parameterType="map">
         SELECT <include refid="column"/>
         FROM sys_user
         WHERE user_name = #{userName}
         AND password = #{password}
         LIMIT 1
    </select>

    <select id="doPaginationQuery" resultMap="baseMap" parameterType="com.yhcrt.demo.model.SysUser">
        SELECT <include refid="column"/>
        FROM sys_user
        <where>
            <if test="userName != null and userName != ''">
                user_name like concat('%', #{userName}, '%')
            </if>
            <if test="realName != null and realName != ''">
                and real_name like concat('%', #{realName}, '%')
            </if>
            <if test="role != null and role != ''">
                and role = #{role}
            </if>
        </where>
        LIMIT #{firstResult} , #{maxResults}
    </select>

    <delete id="deleteByPK" parameterType="long[]">
        DELETE FROM sys_user
        WHERE 1=1  
        <if test="ids != null and ids[0] != ''">
            and id in
            <foreach collection="ids" item="suer" index="index" open="(" separator="," close=")">
                #{suer}
            </foreach>
        </if>
    </delete>

</mapper>