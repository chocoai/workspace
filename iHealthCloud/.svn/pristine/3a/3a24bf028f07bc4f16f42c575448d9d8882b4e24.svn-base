body {
	font-size: 14px;
}
* {
	padding: 0;
	margin: 0;
}

ul {
	list-style: none;
}

a,a:link,a:visited,a:hover,a:active {
	text-decoration: none;
}

.nopad-lr {
	padding-left: 0;
	padding-right: 0;
}
.list {
	width: 100%;
}
.list .list-head {
	width: 100%;
	height: 48px;
	line-height: 48px;
	background-color: #f5f5f5;
	padding-left: 8px;
	padding-right: 8px;
	font-size: 1.2em;
}
.list li {
    width: 100%;
    height: 48px;
    line-height: 48px;
    background-color: #fff;
    padding-left: 8px;
    padding-right: 8px;
    font-size: 1.1em;
    border-bottom: 1px solid #eee;
}
.list li a {
	color: #444;
	display: block;
}
h4 {
	font-size: 1.1em;
	padding-left: 8px;
	padding-right: 8px;
}
.cell {
	padding-left: 8px;
	padding-right: 8px;
	margin-bottom: 20px;
}
.cell img.code {
	width: 30%;
	height: auto;
}
.two {
	width: 47%; 
	height: auto;
}
.one {
	width: 100%;
	height: auto;
}
.accordion-box {
	width: 100%;
	background: #f4f8f6;
	padding-right: 8px;
	padding-left: 8px;
	display: none;
}
.accordion-box .small-pra {
	width: 100%;
	font-size: 0.9em;
	padding-bottom: 10px;
	padding-top: 10px;
}
.accordion-box .small-pra .small-pra-head {
	width: 100%;
	font-weight: bold;
	line-height: 30px;
}
.accordion-box .small-pra .small-pra-body {
	margin-bottom: 0;
	width: 100%;
	line-height: 24px;
	color: #888;
}
.remarks {
	margin-top: 10px;
	color: #333;
}
.greenword {
	color: #14b45c !important;
	padding-right: 0 !important;
	padding-left: 0 !important;
	font-size: 0.8em;
}
/*20171212*/
.update-list { width: 100%; }
.update-list li { height: 52px; margin-left: 15px; border-bottom: 0.5px solid #eee; padding-right: 14px; }
.update-list li a { float: left; width: 100%; }
.update-list li a p { margin-bottom: 0; }
.update-list li .pull-right { line-height: 52px; color: #ccc; }
.update-list li .pull-left { padding-top: 7px; padding-bottom: 7px;}
.update-list li .pull-left .update-title { font-size: 13px; color: #000; line-height: 19px; }
.update-list li .pull-left .update-date { font-size: 11px; color: #888; line-height: 19px; }

.update-detail-list { margin-bottom: 0; }
.update-detail-list li { float: left; padding-top: 20px; padding-bottom: 20px; border-top: 0.5px solid #eee; }
.update-detail-list li:first-child { border-top: none; }
.update-detail-list li p { font-size: 13px; color: #000; line-height: 22px; }
.nopad-l { padding-left: 0; }
.nopad-r { padding-right: 0; }
.pad-r8 { padding-right: 8px; }
.pad-l8 { padding-left: 8px; }