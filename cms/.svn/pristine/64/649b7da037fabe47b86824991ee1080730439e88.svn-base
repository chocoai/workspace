<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<meta http-equiv="keywords" content="${site.keywords!}" />
<meta http-equiv="description" content="${site.description!}" />
<title>${channel.title!channel.name} - ${site.name}</title>

<link rel="stylesheet" type="text/css" href="/${res}/css/public_all.css" />
<link rel="stylesheet" type="text/css" href="/${res}/css/global.css" />
<link rel="stylesheet" type="text/css" href="/${res}/css/zt.css" />
</head>

<body>

<!--top 开始-->
[#include "../include/header.html"/]
[#include "../include/navi.html"/]
<!--nav 结束-->
<div style=" clear:both;"></div>

<!--内容 开始-->
<div class="box mb10">
     <div class="map mv10"><img src="/${res}/images/home.png" width="20" height="18"><a href="${base}/">首页</a> >  活动</div>
     <div class="zt_list">
     [@cms_content_page count='5' orderBy='4' channelOption='1' channelId=channel.id] 
     [#if tag_pagination.list?size gt 0]
         <ul>
              
              [#list tag_pagination.list as a]
              <li>
                 <a href="${a.url}" target="_blank"><img src="${a.titleImg!a.typeImg!}" /></a>
                 <a href="${a.url}" target="_blank" class="zt_text">${a.title!}</a>
              </li>
              [/#list]
        </ul>
         
         <div style=" clear:both;"></div>
         <div class="list_dis">
                 <div class="jogger">[@cms_pagination sysPage='1'/]</div>
                                        
         </div>
      [#else] <div class="list_dis">&nbsp;</div>
      [/#if]
      [/@cms_content_page]                 
     </div>
</div>
<!--内容 end-->

<!--尾部 开始-->
[#include "../include/footer.html"/]
<!--尾部 开始-->

</body>
</html>