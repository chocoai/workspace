<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>我要交换-换客-东楚网</title>
<link rel="stylesheet" type="text/css" href="/r/cms/www/default/css/hkkj.css" />
<link rel="stylesheet" type="text/css" href="/r/cms/www/default/css/public_all.css" />
<link rel="stylesheet" type="text/css" href="/r/cms/www/default/css/global.css" />

<script src="${base}/r/cms/jquery.js" type="text/javascript"></script>
<script src="${base}/thirdparty/My97DatePicker/WdatePicker.js" type="text/javascript"></script>
<script src="${base}/res/common/jquery.js" type="text/javascript"></script>
<script src="${base}/res/common/jquery.validationEngine-zh_CN.js" type="text/javascript"></script>

<script src="${base}/res/common/message.js" type="text/javascript"></script></head>

<body>

[#include "../include/header.html"/]
[#include "../include/navi.html"/]
<div style=" clear:both;"></div>


<!--内容 开始-->
<div class="box mt10">
   <div class="map"><img src="${base}/r/cms/www/default/images/home.png" width="20" height="18"><a href="${base}/">首页</a> >  我要交换</div>
   <div class="hhkj">
     <div class="put">    
      <form id="submitForm" action="${base}/member/exchange_save.jspx" method="post">
           <input type="hidden" name="contentId" value="${content.id}"/>       
           <table width="98%" border="0" align="center" class="biaodan">
               <tr>
                 <td colspan="3" class="title">我要交换<span style="color:red">${content.title}</span></td>
               </tr>
               <tr>
                 <td class="left_name">交换物  </td>
                 <td class="right_input"><input type="text" name="title" value="${content.attr.change}" class="put_box required" /><span style="font-size:13px">可填自己闲置的物品</span></td>
                 <td class="right_red"><span class="red">*</span></td>
               </tr>
               <tr>
                 <td class="left_name">姓名  </td>
                 <td class="right_input"><input type="text" id="name" name="name" class="put_box required" /></td>
                 <td class="right_red"><span class="red">*</span></td>
               </tr>
               <tr>
                 <td class="left_name">联系方式</td>
                 <td class="right_input"><input type="text" id="contact" name="contact" class="time required" /><span style="font-size:13px">你的电话号码或其它</span></td>
                 <td class="right_red"><span class="red">*</span></td>
               </tr>
                <tr>
                 <td class="left_name">联系地址</td>
                 <td class="right_input"><input type="text" id="address" name="address" class="time required" /></td>
                 <td class="right_red"><span class="red">*</span></td>
               </tr>
               
                <tr>
                 <td class="left_name">留言备注</td>
                 <td class="right_input"><textarea id="txt" name="bz" class="text_ar" placeholder="选填：对本次交换的说明"></textarea> 
	                 
				 </td>
                 <td class="right_red"></td>
               </tr>
               <tr>
                  <td class="left_name"></td>
                  <td class="right_input" >
                     <input id="isChecked" class="reg_checkbox" type="checkbox" name="isChecked"><span style="line-height:36px">我已阅读并接受<a>《东楚网换客协议》</a></span>
                  </td>
                  <td class="right_red"></td>
               </tr>
             
               <tr>
                 <td class="left_name"></td>
                 <td class="right_input">
                     <div class="but" id="exbtn"><input name="input" id="btn1" type="button" value="我要交换" class="sure" onclick="submitForm()"/></div>
                     <div class="but"><input name="input" type="reset" value="取消" class="cancel" /></div></td>
                 <td class="right_red"></td>
               </tr>
               
          </table>
         </form>
       </div>                                                      
   </div>
           
</div>

<!--尾部 开始-->
[#include "../include/footer.html"/]
<!--尾部 开始-->

</body>
<script type="text/javascript">
$(function() {
	  if($("input[name=isChecked]:checked").size()==0){
			//$("#exbtn").removeClass("sure").addClass("exchecked");
			$("#exbtn").html("<span class='exchecked'>我要交换</span>");
		    return false;
		}
	  
});
//判断有没有被选中
$("#isChecked").change(function(){
	if($("#isChecked").is(':checked')){
		$("#exbtn").html("<input name='input' type='button' value='我要交换' class='sure' onclick='submitForm()'/>");
	}else{
		$("#exbtn").html("<span class='exchecked'>我要交换</span>");
	}
		
});

function  submitForm(){

	if ($('#title').val() == '') {
		alert('请输入交换物');
		$('#title').focus();
		return;
	}
	if ($('#name').val() == '') {
		alert('请输入姓名');
		$('#name').focus();
		return;
	}
	if ($('#contact').val() == '') {
		alert('请输入联系方式');
		$('#contact').focus();
		return;
	}
	if ($('#address').val() == '') {
		alert('请输入联系地址');
		$('#address').focus();
		return;
	}
	var s = $("#submitForm");
	var url = s[0].action;
	var data = s.serialize();
	var options = {
                url: '${base}/member/exchange_save.jspx',
                type: 'post',
                dataType: 'json',
                data: data,
                success:  function (data) {
                	if(data.status==0) {
	                    alert("提交成功");
	                    location.href=location.href;
	                } else if(data.status==1){	
	                    alert("物品不存在");
	                }else if(data.status==2){	
	                    alert("不能交换自己发布的物品");
	                }else{
	                	 alert("交换失败");
	                }
                }
            };
            $.ajax(options);
            return false;
   }
</script>
</html>