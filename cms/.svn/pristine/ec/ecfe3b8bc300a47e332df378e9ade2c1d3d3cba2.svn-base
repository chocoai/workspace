<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
<title></title>
<#include "/cms_sys/head.html"/>
<script type="text/javascript">
function getTableForm() {
	return document.getElementById('tableForm');
}
function optDelete() {
	if(Pn.checkedCount('ids')<=0) {
		$.alert("<@s.m 'global.prompt'/>","<@s.m 'error.checkRecord'/>");
		return;
	}
	$.confirm(doDelete,"<@s.m 'global.confirm'/>","<@s.m 'global.confirm.delete'/>");
}
function doDelete(){
	var f = getTableForm();
	f.action="o_delete.do";
	f.submit();
}
function optCheck() {
	if(Pn.checkedCount('ids')<=0) {
		$.alert("<@s.m 'global.prompt'/>","<@s.m 'error.checkRecord'/>");
		return;
	}
	var f = getTableForm();
	f.action="o_check.do";
	f.submit();
}
function optCheckCancel() {
	if(Pn.checkedCount('ids')<=0) {
		$.alert("<@s.m 'global.prompt'/>","<@s.m 'error.checkRecord'/>");
		return;
	}
	var f = getTableForm();
	f.action="o_check_cancel.do";
	f.submit();
}
</script>
</head>
<body>
<div class="box-positon">
	<div class="rpos"><@s.m "global.position"/>: <@s.m "cmsBaoLiao.function"/> - <@s.m "global.list"/></div>
	<form class="ropt">
	</form>
	<div class="clear"></div>
</div>
<div class="body-box">
<form action="v_list.do" method="post" id="listForm">
<div style="padding-top:5px; padding-bottom:5px; text-indent:10px; border-bottom:1px solid #fff; border-top:1px solid #fff;">
<@s.m "cmsBaoLiao.title"/>: <@p.text width="100" name="queryTitle"  maxlength="100"/>
<@s.m "cmsBaoLiao.checked"/>: <@p.select name="queryChecked" value=queryChecked  list={"":"global.all","true":"global.true","false":"global.false"}/>
<@s.m "cmsBaoLiao.recommend"/>: <@p.select name="queryRecommend" value=queryRecommend  list={"":"global.all","true":"global.true","false":"global.false"}/>
<input class="query" type="submit" value="<@s.m "global.query"/>"/>
</div>
</form>
<form id="tableForm" method="post">
<input type="hidden" name="pageNo" value="${pageNo!}"/>
<@p.table value=pagination;baoliao,i,has_next><#rt/>
	<@p.column title="<input type='checkbox' onclick='Pn.checkbox(\"ids\",this.checked)'/>" width="25" align="center">
		<input type='checkbox' name='ids' value='${baoliao.id}' onclick="Pn.selectCheckBox('${baoliao.id}',this.checked)"/><#t/>
	</@p.column><#t/>
	<@p.column title="序号" align="center">${i+1}</@p.column><#t/>
	<@p.column code="cmsBaoLiao.title" align="center" >${baoliao.title!?html}</@p.column><#t/>
	<@p.column code="cmsBaoLiao.createTime" align="center">${baoliao.createTime}</@p.column><#t/>
	<@p.column code="cmsBaoLiao.state" align="center"><#if baoliao.state ??><#if baoliao.state ==0><span style="color:red;font-weight:bold;"><@s.m "cmsBaoLiao.state.0"/></span> </#if><#if baoliao.state==1><@s.m "cmsBaoLiao.state.1"/></#if><#if baoliao.state==2><@s.m "cmsBaoLiao.state.2"/></#if><#else><span style="color:red;font-weight:bold;"><@s.m "cmsBaoLiao.state.0"/></span></#if></@p.column><#t/>
	<@p.column code="cmsBaoLiao.recommend" align="center"><#if baoliao.recommend><@s.m "global.true"/><#else><@s.m "global.false"/></#if></@p.column><#t/>
	<@p.column code="cmsBaoLiao.checked" align="center"><#if baoliao.checked><@s.m "global.true"/><#else><span style="color:red;font-weight:bold;"><@s.m "global.false"/></span></#if></@p.column><#t/>
	<@p.column code="global.operate" align="center">
		<a href="v_edit.do?id=${baoliao.id}&pageNo=${pageNo!}" class="pn-opt"><@s.m "global.edit"/></a> | <#rt/>
		<a href="o_delete.do?ids=${baoliao.id}&pageNo=${pageNo!}" onclick="if(!$.confirmToUrl(this.href)) {return false;}" class="pn-opt"><@s.m "global.delete"/></a><#t/>
	</@p.column><#t/>
</@p.table>
<div style="background:url(${base}/res/common/img/theme/boxTitleBG.jpg) repeat-x; height:20px; overflow:hidden;">
<input type="button" value="<@s.m "cmsBaoLiao.checked"/>" onclick="optCheck();" class="check"/ style="float:left; border-right:1px solid #ffffff;">
<input type="button" class="cancellation-audit" value="<@s.m "cmsBaoLiao.checked.cancel"/>" onclick="optCheckCancel();"/ style="float:left; border-right:1px solid #ffffff;">
<input class="del-button" type="button" value="<@s.m "global.delete"/>" onclick="optDelete();"/ style="float:left; border-right:1px solid #ffffff;">
</div>
</form>
</div>
<#include "/common/alert_message.html"/>
</body>
</html>