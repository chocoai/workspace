<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
	default-lazy-init="true">
	<!--缓存-->
	<bean id="cacheManager" class="com.yhcrt.weihu.common.web.WebEhCacheManagerFacotryBean">
		<property name="configLocation">
			<value>/WEB-INF/config/ehcache-application.xml</value>
		</property>
		<property name="diskStoreLocation">
			<value>/WEB-INF/cache/application</value>
		</property>
	</bean>
	<!--SESSION缓存-->
	<bean id="ehSessionCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.common.web.Session</value>
		</property>
		<qualifier value="session"/>
	</bean>
	<!--内容计数缓存-->
	<bean id="ehContentCountCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.ContentCount</value>
		</property>		
		<qualifier value="contentCount"/>
	</bean>
	<!--栏目计数缓存-->
	<bean id="ehChannelCountCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.ChannelCount</value>
		</property>		
		<qualifier value="channelCount"/>
	</bean>
	<!--微信token缓存-->
	<bean id="ehWeixinTokenCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.weixin.token</value>
		</property>		
		<qualifier value="tokenCache"/>
	</bean>
	
	<!--站点流量缓存-->
	<bean id="ehCmsSiteFlowCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsSiteFlow</value>
		</property>		
		<qualifier value="cmsSiteFlow"/>
	</bean>
	<!--一次会话访问缓存-->
	<bean id="ehCmsSiteAccessCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsAccess</value>
		</property>		
		<qualifier value="cmsAccessCache"/>
	</bean>
	<!--最新会话访问缓存-->
	<bean id="ehCmsSiteLastAccessCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsLastAccess</value>
		</property>		
		<qualifier value="cmsLastAccessCache"/>
	</bean>
	<!--每次访问页面缓存-->
	<bean id="ehCmsSiteAccessPagesCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsAccessPage</value>
		</property>		
		<qualifier value="cmsAccessPageCache"/>
	</bean>
	<!--pv总量计数缓存-->
	<bean id="ehPvTotalCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsSitePvTotal</value>
		</property>		
		<qualifier value="cmsPvTotalCache"/>
	</bean>
	<!--访问者总量计数缓存-->
	<bean id="ehVisitorTotalCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsSiteVisitorTotal</value>
		</property>		
		<qualifier value="cmsVisitorTotalCache"/>
	</bean>
	
	<!--今日pv总量计数缓存-->
	<bean id="ehDayPvTotalCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsSiteDayPvTotal</value>
		</property>		
		<qualifier value="cmsDayPvTotalCache"/>
	</bean>
	<!--今日访问者总量计数缓存-->
	<bean id="ehDayVisitorTotalCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsSiteDayVisitorTotal</value>
		</property>		
		<qualifier value="cmsDayVisitorTotalCache"/>
	</bean>
		
	<!--搜索词汇缓存-->
	<bean id="ehSearchWordsCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.front.CmsSearchWords</value>
		</property>		
		<qualifier value="cmsSearchWords"/>
	</bean>
	
	<!--shiro缓存
	<bean id="ehShiroCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>com.yhcrt.weihu.cms.shiro.shiroCache</value>
		</property>		
		<qualifier value="shiroCache"/>
	</bean>
	-->
	
	<bean id="ehBbsUserCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.bbs.front.BbsUserCache</value>
		</property>
		<qualifier value="bbsUserCache"/>
	</bean>
	<!--主题计数缓存-->
	<bean id="ehTopicCountCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.cms.front.TopicCount</value>
		</property>
		<qualifier value="topicCount"/>
	</bean>
	<!--最后回复时间缓存-->
	<bean id="ehLastReplyCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.cms.front.LastReply</value>
		</property>
		<qualifier value="lastReply"/>
	</bean>
	<!--论坛统计缓存-->
	<bean id="bbsconfigCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.cms.front.BbsConfigCount</value>
		</property>
		<qualifier value="bbsconfigCount"/>
	</bean>
	<bean id="ehTopicDayCountCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.cms.front.TopicDayCount</value>
		</property>
		<qualifier value="topicDayCount"/>
	</bean>
	<bean id="ehTopicWeekCountCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.cms.front.TopicWeekCount</value>
		</property>
		<qualifier value="topicWeekCount"/>
	</bean>
	<bean id="ehTopicMonthCountCache" class="org.springframework.cache.ehcache.EhCacheFactoryBean">
		<property name="cacheManager">
			<ref local="cacheManager"/>
		</property>
		<property name="cacheName">
			<value>.cms.front.TopicMonthCount</value>
		</property>
		<qualifier value="topicMonthCount"/>
	</bean>
</beans>