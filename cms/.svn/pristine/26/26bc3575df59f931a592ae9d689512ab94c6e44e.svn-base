<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>找回密码 - ${site.name}</title>
<link rel="stylesheet" type="text/css" href="/${res}/css/global.css"/>
<link rel="stylesheet" type="text/css" href="/${res}/css/index.css"/>
<script src="${resSys}/jquery.js" type="text/javascript"></script>
<script src="${resSys}/front.js" type="text/javascript"></script>
<script type="text/javascript">
$(function() {
	$("#jvForm").validate();
	$("#captcha").click();
});
</script>
</head>

<body>
<<body onload="MM_preloadImages('images/blog_login.png','images/wechat_login.png','images/qq_login.png')">
<!--top 开始-->
[#include "../include/header.html"/]
[#include "../include/navi.html"/]
<!--nav 开始-->


<!----中间内容部分---->
<div class="box">
  <div class="map mv10"><img src="/${res}/images/home.png" width="20" height="18"><a href="${base}/">首页</a> >  找回密码</div>
    <div class="bigcenter">
    <form id="jvForm" action="forgot_password.jspx" method="post">
         <div class="register">
               <div class="left_name">用户名：</div><div class="right_input"><input type="text" id="username" name="username" class="phone required"></div>
               <div class="left_name">邮箱：</div><div class="right_input"><input type="text" id="email" name="email" class="tt required email" maxlength="30"><br/>找回密码会发送邮件到该邮箱</div>
               <div class="left_name">验证码：</div><div class="right_input3"><input type="text" id="captcha" name="captcha" maxlength="20" class="tt required"/><span class="cap"><img src="${base}/captcha.svl" id="captcha" onclick="this.src='${base}/captcha.svl?d='+new Date()*1" /></span></div>
               <!-- <div class="left_name">密码：</div><div class="right_input"><input type="password" class="phone"></div>
               <div class="left_name">确认密码：</div><div class="right_input"><input type="password" class="phone"></div> -->
               <div class="but"><input name="" type="submit" value="确认" class="sure"></div><div class="but"><input name="" type="button" value="取消" class="cancel"></div>
         </div>
    
    </div> 
    
</div>
</body>
</html>