<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<form id="submitForm" action="${base}/baoliaocommt.jspx" method="post">
	<input type="hidden" name="baoliaoId" value="${baoliao.id}" />
	<input type="hidden" name="sessionId" id="sessionId" /> 
	<input type="hidden" id="text" name="text" />
	<div class="form-group mar-lr0">
        <textarea class="form-control" id="cont" name="cont" placeholder="评论内容"></textarea>
        <span id="face"> <img src="/${res}/images/icon_biaoqing.png" alt="" /></span>
    </div>
	<div class="form-group mar-lr0">
       <a class="btn btn-red form-control"  href="javascript:void(0);" onclick="submitForm()">评论</a>
    </div>
</form>
<script type="text/javascript" src="/${res}/js/face/jquery-1.8.0.min.js"></script> 
<link href="/${res}/js/face/jquery.sinaEmotion.css" rel="stylesheet" type="text/css"/>
<script src="/${res}/js/face/jquery.sinaEmotion.js" type="text/javascript"></script>
<div style="clear: both;"></div>
	<script type="text/javascript">
	$("#face").SinaEmotion($("#cont"));	
	  function  submitForm(){
			if ($('#cont').val() == '') {
				alert('请先填写评论内容');
				$('#cont').focus();
				return;
			}
			$('#text').val(AnalyticEmotion($('#cont').val()));
			var s = $("#submitForm");
			var url = s[0].action;
			var data = s.serialize();
			var options = {
	                    url: url,
	                    type: 'post',
	                    dataType: 'json',
	                    data: data,
	                    success:  function (data) {
		                	if(data.status==0) {
			                    alert("提交成功");
			                    location.href=location.href;
			                }
	                    }
	                };
	                $.ajax(options);
	                return false;
         }
     
      </script> 
