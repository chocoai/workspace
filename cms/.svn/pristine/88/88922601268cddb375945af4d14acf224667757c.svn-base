body { font-family: "微软雅黑"; font-size: 13px; color: #333; }
.home-bg { background-color: #fff; }
* { margin: 0; padding: 0; }
ul,
ol { list-style: none; }
a:hover { text-decoration: none; color: #dc251f; }
a { color: #333; text-decoration: none; }
.top { width: 100%; background-color: #f5f5f5; font-size: 12px; height: 30px; line-height: 30px; }
.top-center { width: 1280px; margin: 0 auto; }
.top-left { float: left; }
.top-right { float: right; }
.mar-r15 { margin-right: 15px; }
#date { width: 90px; overflow: hidden; float: left; }
.weather { float: left; height: 30px; line-height: 30px;}

/*logo、搜索样式*/
.logo-box { width: 100%; }
.logo-box .logo-center { margin: 0 auto; width: 1280px; height: 60px; padding: 20px 0; }
.logo-box .logo-center .newlogo { float: left; }
.logo-box .logo-center .newlogo a { width: 160px; height: 60px; }
.logo-box .logo-center .newsearch { float: right; margin: 10px 0; position: relative; width: 400px; height: 40px; }
.logo-box .logo-center .newsearch .search-input { width: 300px; height: 38px; border: 1px solid #ccc; padding: 0 10px; float: left; }
.logo-box .logo-center .newsearch input.search-input:focus { border-color: #dc251f; -webkit-box-shadow: none; box-shadow: none; }
.logo-box .logo-center .newsearch input.search-btn { width: 80px; height: 40px; background-color: #dc251f; text-align: center; line-height: 40px; color: #fff; font-size: 14px; border: none; float: left; position: absolute; left: 319px; top: 0; cursor: pointer; }
.logo-box .logo-center .newsearch input.search-btn:hover { background-color: #d4221c; }

/*nav样式*/
.nav { width: 100%; height: 44px; background-color: #dc251f; line-height: 44px; }
.nav-center { width: 1280px; margin: 0 auto; }
.nav-list { float: left; width: 1280px; }
.nav-list li { float: left; height: 44px; line-height: 44px; }
.nav-list li a { float: left; padding: 0 18px; color: #fff; font-size: 15px; display: block; background: url(../images/myicon.png) no-repeat 0 0; }
.nav-list li:first-child a { background-image: none; }
.nav-list li.active a { background-color: rgba(0, 0, 0, 0.1); }
.nav-list li a:hover { background-color: rgba(0, 0, 0, 0.07) !important; }

/*footer样式*/
.footer { float: left; width: 100%; margin-top: 20px; background: #f7f7f7; border-top: 1px solid #e5e5e5; padding: 20px 0; }
.footer .footer-center { margin: 0 auto; width: 1280px; line-height: 20px; text-align: center; color: #666; font-size: 12px; }

