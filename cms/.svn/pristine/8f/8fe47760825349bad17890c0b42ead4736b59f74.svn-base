<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>视频--东楚网</title>
<link rel="stylesheet" type="text/css" href="/${res}/css/sp.css" />
<link rel="stylesheet" type="text/css" href="/${res}/css/public_all.css" />
<link rel="stylesheet" type="text/css" href="/${res}/css/global.css" />
<script src="${resSys}/jquery.js" type="text/javascript"></script>
<script src="${resSys}/jqueryUI/jquery-ui.js" type="text/javascript"></script>
<script src="${resSys}/front.js" type="text/javascript"></script>
 <link href="/${res}/js/video/video-js.css" rel="stylesheet" type="text/css">
<script src="/${res}/js/video/video.js" type="text/javascript"></script>
<script type="text/javascript" charset="utf-8" src="http://static.bshare.cn/b/buttonLite.js#style=-1&amp;uuid=&amp;pophcol=2&amp;lang=zh"></script>
<script type="text/javascript" charset="utf-8" src="http://static.bshare.cn/b/bshareC0.js"></script>
<script type="text/javascript">

	$(function() {
		Cms.checkPerm("${base}", "${content.id}");
		Cms.collectCsi("${base}", "collectCsiDiv", "collect_csi",
				"${content.id}");
		Cms.attachment("${base}", "${content.id}",
				"${content.attachments?size}", "attach");
		Cms.viewCount("${base}", "${content.id}");
		Cms.siteFlow("${base}", location.href, document.referrer,
				"${site.config.flowSwitch?string}");
	});
</script>
  <script>
    videojs.options.flash.swf = "/${res}/js/video/video-js.swf";
  </script>
</head>

<body>

<!--top 开始-->
	[#include "../include/header.html"/] [#include "../include/navi.html"/]
<!--nav 结束-->
<div style=" clear:both;"></div>


<!--内容 开始-->
<div class="box">
    <div class="map mt10"><img src="/${res}/images/home.png" width="20" height="18"><a href="${base}/">首页</a> >  <a href="${base}/vedio/index.jhtml" >东楚视频</a>>  <a href="${channel.url}">${channel.name}</a> > ${content.title!}</div>
    <div style=" clear:both;"></div>
    <div class="details">
        <div class="details_left mv10">
        <div class="def_video">
           <video id="example_video_1" class="video-js vjs-default-skin vjs-big-play-centered" controls preload="none" width="896" height="508"
		      poster="http://video-js.zencoder.com/oceans-clip.png"
		      data-setup="{}">
		    <source id ="str" src="${content.attr.video_url}" type='video/mp4' />
		    <source src="${content.attr.video_url}" type='video/flv' />
		    <source src="${content.attr.video_url}" type='video/webm' />
            <source src="${content.attr.video_url}" type='video/ogg' />
		    <!--  <script language="javascript">
		    //var str1 = str.substring(str.lastIndexOf('.'));//截取字符串
		    </script>-->
		    <!--  <track kind="captions" src="demo.captions.vtt" srclang="en" label="English"></track><!-- Tracks need an ending tag thanks to IE9 
		    <track kind="subtitles" src="demo.captions.vtt" srclang="en" label="English"></track><!-- Tracks need an ending tag thanks to IE9 -->
		  
		  </video>
         <!--   
         <img src="/${res}/images/play_butt.png" alt=""/>-->
        </div>
        <div style=" clear:both;"></div>
        <div class="video_share">
          <ul>
              <li><a href="Javascript:void();" onclick="Cms.up('${base}',${content.id},${content.ups});"><img src="/${res}/images/zan01.png"></a><span id="ups" style="color:#fff;"></span><span id="ups" style="color:#fff;"></span></li>
              <li>
				<div class="bshare-custom" style="clear:both;">
				      <a title="分享" class="bshare-more" style="height: 60px;line-height: 60px;"><img src="/${res}/images/share.png"></a>
				       <span class="BSHARE_COUNT" style="float: none;font-size:14px;color:#fff; height: 60px;line-height: 60px;"></span>
				</div>
				
              </li>
              <!--  <li><a href="#"><img src="/${res}/images/collect01.png">收藏</a></li>-->
          </ul>
          <div class="video_ing">正在播放：${content.title!}</div>
        </div>
        
        <div style=" clear:both;"></div>
        <div class="pinglun">
                    <div class="send_mess">评论</div>
                    [#include "inc_comment_input.html"/]
                                 
                    <div style=" clear:both;"></div>
                    [#include "../special/comment_list.html"/]
        </div>
        <div style=" clear:both;"></div>
    </div>
    
    <div class="details_right mv10">
                          <div class="notice">
                               <div class="title"><span>公示公告</span></div>
                               <ul class="com_list">
									[@cms_content_list count='7' orderBy='4' titLen='18' channelOption='1' channelId='13'] 
									[#list tag_list as gs]
									<li>
										<a href="${gs.url}" title="${gs.title}" target="_blank">[@text_cut s=gs.title len=titLen /]</a>
									</li>
									[/#list] 
									[/@cms_content_list]
                               </ul>
                          </div>

                           
                          <div class="ads_img"><img src="/${res}/images/adds.jpg" width="374" height="281" /></div>
                          
                          <div class="pic_right">
                                  <div class="title"><span>读图</span></div>
                                  <div style=" clear:both;"></div>
                                         
                                  <div class="Read_pic">
                                          <div id="con_menuf_1" class="hover">
											[@cms_content_list count='2' titLen='20' channelOption='1' channelId='42' orderBy='4'] 
											[#list tag_list as p] 
											[#if p_index == 0]
											<div class="vedio_list">
												<div class="hd_titel">
													<a href="${p.url}" title="${p.title}" target="_blank">${p.title}</a>
												</div>
												<img src="${p.titleImg!p.typeImg!site.defImg}" width="165" height="140">
											</div>
											[#else]
											<div class="vedio_list ml10">
												<div class="hd_titel">
													<a href="${p.url}" title="${p.title}" target="_blank">${p.title}</a>
												</div>
												<img src="${p.titleImg!p.typeImg!site.defImg}" width="165" height="140">
											</div>
											[/#if] 
											[/#list] 
											[/@cms_content_list]
                                             
                                          </div>
                                  
                                       
                                   </div>
                                        
                          </div>
                          
                          <div class="recommend">
                                <div class="title"><!--  <i><a href="javascript:void(0);" onclick="">换一批</a></i>--><span>关联视频推荐</span></div>
                                [@cms_content_list  tagName=content.tagStr titLen='19' excludeId=content.id channelOption='1' channel=channel.id] 
								[#if tag_list??] 
                                <ul id="flex1">
                                	[#list tag_list as t]
	                                     <li>
	                                          <a href="${t.url}" target="_blank"><img src="${t.titleImg!t.typeImg!site.defImg}"/></a>
	                                          <span><a href="${t.url}" target="_blank">[@text_cut s=t.title len=titLen /]</a></span>
	                                          <u><i></i>${t.views!}</u>
	                                     </li>
	                                [/#list]
	                                [#else]暂无相关视频
                                </ul>
                               [/#if] 
                               [/@cms_content_list] 
                          </div>
         
         </div>
    </div>
    
           
</div>
<!--内容 end-->

<!--尾部 开始-->
[#include "../include/footer.html"/]
<!--尾部 开始-->

</body>
</html>