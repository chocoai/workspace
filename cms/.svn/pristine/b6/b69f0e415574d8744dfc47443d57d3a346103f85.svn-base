<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd"
	default-lazy-init="true">
	<!--HttpSession-->
	<bean id="sessionProvider" class="com.yhcrt.weihu.common.web.session.HttpSessionProvider"/>
	<!--缓存Session
		<bean id="sessionProvider" class="com.yhcrt.weihu.common.web.session.CacheSessionProvider">
			<property name="sessionCache" ref="sessionCache"/>
			<property name="sessionIdGenerator" ref="sessionIdGenerator"/>
		</bean>
		-->
	<!--Memcached缓存
		<bean id="sessionCache" class="com.yhcrt.weihu.common.web.session.cache.MemcachedDangaCache">		
			<property name="servers">
				<list>
					<value>127.0.0.1:11211</value>
				</list>
			</property>
			<property name="weights">
				<list>
					<value>1</value>
				</list>
			</property>
		</bean>
		-->
	<!--Ehcache缓存
		<bean id="sessionCache" class="com.yhcrt.weihu.common.web.session.cache.EhcacheSessionCache">
			<property name="cache" ref="ehSessionCache"/>
		</bean>
		-->
	<!--SessionId生成器
		<bean id="sessionIdGenerator" class="com.yhcrt.weihu.common.web.session.id.JdkUUIDGenerator"/>
		-->
	<!--图片处理-->
	<bean id="imageScale" class="com.yhcrt.weihu.common.image.ImageScaleImpl" init-method="init">
		<property name="tryMagick" value="true"/>
	</bean>
	<!--密码加密器-->
	<bean id="pwdEncoder" class="com.yhcrt.weihu.common.security.encoder.Md5PwdEncoder"/>
		
	<!--执行时间标签-->
	<bean id="uuid" class="com.yhcrt.weihu.common.web.freemarker.UUIDDirective"/>
	<bean id="process_time" class="com.yhcrt.weihu.common.web.freemarker.ProcessTimeDirective"/>
	<bean id="text_cut" class="com.yhcrt.weihu.common.web.freemarker.TextCutDirective"/>
	<bean id="html_cut" class="com.yhcrt.weihu.common.web.freemarker.HtmlCutDirective"/>
	
	<bean id="realPathResolver" class="com.yhcrt.weihu.common.web.springmvc.ServletContextRealPathResolver"/>
	<bean id="fileRepository" class="com.yhcrt.weihu.common.upload.FileRepository"/>
	<!--文件模板-->
	<bean id="tplManager" class="com.yhcrt.weihu.core.tpl.FileTplManagerImpl"/>
	<!--数据库模板
		<bean id="dbTplDao" class="com.yhcrt.weihu.core.dao.impl.DbTplDaoImpl"/>
		<bean id="tplManager" class="com.yhcrt.weihu.core.manager.impl.DbTplMngImpl"/>
		-->

	<bean id="ipSeeker" class="com.yhcrt.weihu.common.ipseek.IPSeekerImpl" init-method="init">
		<property name="dir" value="/WEB-INF/ipseek"/>
		<property name="filename" value="QQWry.Dat"/>
