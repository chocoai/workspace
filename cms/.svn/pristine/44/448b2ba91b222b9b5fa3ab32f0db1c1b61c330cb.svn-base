.details{ margin:10px auto 0px; width:1280px; height:auto; overflow:hidden;!important}
.details .details_left{ float:left; width:896px;background-color:#fff; padding-top:20px;height:auto; overflow:hidden;!important}
.details .details_left ul.article_list{ margin:0 auto; width:856px; padding:0px 20px 10px; font-size:14px; color:#999; text-align:center; height:auto; overflow:hidden;!important }
.details .details_left ul.article_list li{ float:left; width:856px; height:30px; line-height:30px; text-align:left; background:url(../images/dics.png) no-repeat 3px center; text-indent:15px;}
.details .details_left ul.article_list li span{ float:right; color:#aaa;}
.list_dis{ margin:0 auto; width:380px; padding-bottom:20px;}
.jogger {padding:2px; margin:7px; font-family:Arial, Helvetica, sans-serif;} 
.jogger a { padding:0.5em 0.64em 0.43em 0.64em; margin:2px; color:#fff; background-color:#ee4e4e; text-decoration:none;} 
.jogger a:hover { padding:0.5em 0.64em 0.43em 0.64em;margin:2px; color:#fff; background-color:#de1818;} 
.jogger a:active { padding:0.5em 0.64em 0.43em 0.64em;margin:2px; color:#fff; background-color:#de1818;} 
.jogger span.current {padding:0.5em 0.64em 0.43em 0.64em;margin:2px; color:#6d643c;  background-color:#f6efcc;} 
.jogger span.disabled { DISPLAY: none } 

