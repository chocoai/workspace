.details .details_left .article .related_news ul.relation li a:link{ color:#333; text-decoration:none; font-size:14px;}
.details .details_left .article .related_news ul.relation li a:hover{ color:#1d9dba; text-decoration:none}
.details .details_left .article .page_til{ float:left;width:auto; height:25px; padding:3px; margin-top:20px;border-top:2px solid #ff9900;font-weight:bold;font-size:16px;color:#333;text-align: left;display:block;line-height:25px;}	
.details .details_left .article .dp_input{float:left;width:856px;line-height:30px;color:#333;font-size:14px;}
.details .details_left .article .dp_input .dp_input2 {margin-top:0px; width:834px; height:50px; border:1px solid #ccc; color:#555; overflow:auto; padding:10px; text-align:left;}
.details .details_left .article .dp_input .dp_input_btn{width:70px;height:26px;line-height:26px;background:#ff9900;color:#fff;font-size:14px;font-weight:bold;display:block;float:right;margin-top:5px;text-align:center;}

