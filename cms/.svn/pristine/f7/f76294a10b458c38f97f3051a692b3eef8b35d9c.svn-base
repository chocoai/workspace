    <form id="baoliaoForm" action="${base}/baoliao.jspx" method="post">
         <div class="blt_box">
              <input type="text"  id="title" name="title" placeholder="请填写标题" class="blt_title" />
             <div class="send_mess_box">
                        <textarea  id="content" name="content"  placeholder="填写爆料内容，请注明发生时间、地点" class="blt_title"></textarea>
                        <span><a href="#"><img src="${base}/${res}/images/icon_pho.png" alt=""/></a></span>
                        <span>手机：<input type="text" name="tel"/>&nbsp;邮箱：<input type="text" name="email"/></span>
                        <span>验证码：<input type="text" id="captcha" name="captcha" maxlength="20" vld="{required:true}"/> </span>
                         <img id="blCaptcha" src="${base}/captcha.svl" onclick="this.src='${base}/captcha.svl?d='+new Date()"/>
                        <div class="send_butt"><a href="javascript:void(0);" onclick="baoliaoForm()">爆料</a></div>
             </div>
           
         </div>  
         </form>
          <script type="text/javascript">
         
            function  baoliaoForm(){
            	if ($('#title').val() == '') {
    				alert('请输入标题');
    				$('#title').focus();
    				return;
    			}
    			if ($('#content').val() == '') {
    				alert('请输入内容');
    				$('#content').focus();
    				return;
    			}
    			if ($('#captcha').val() == '') {
    				alert('验证码不能为空');
    				$('#captcha').focus();
    				return;
    			}
    			
    			var s = $("#baoliaoForm");
    			var url = s[0].action;
    			var data = s.serialize();
    			var options = {
    	                    url: 'baoliao.jspx',
    	                    type: 'post',
    	                    dataType: 'json',
    	                    data: data,
    	                    success:  function (data) {
    		                	if(data.status==0) {
    			                    alert("提交成功");
    			                    location.href=location.href;
    			                } else if(data.status==1) {	
    			                    alert("验证码错误");
    			                    $("#blCaptcha").click();
    			                }
    	                    }
    	                };
    	                $.ajax(options);
    	                return false;
               }
           
            </script> 
