<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>会员登录 - ${site.name}</title>
<link href="/${res}/css/index.css" rel="stylesheet" type="text/css" />
<link href="/${res}/css/global.css" rel="stylesheet" type="text/css" />
<script src="${resSys}/jquery.js" type="text/javascript"></script>
<script src="${resSys}/front.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$("#jvForm").validate();
	});
	
	$(document).ready(function() {
		$("#agreement").click(function() {
			if ($('#agreement').is(':checked')) {
				$('#agree').hide();
			}else{
				$('#agree').show();
			}
		});
	});
	
	function submitForm(){
		if ($('#agreement').is(':checked')) {
			$('#agree').hide();
		}else{
			$('#agree').show();
			return false;
		}
		$("#jvForm").submit();
		
	}
	
</script>
</head>

<body>
	<body onload="MM_preloadImages('images/blog_login.png','images/wechat_login.png','images/qq_login.png')">
		<!--top 开始-->
		[#include "../include/header.html"/] 
		[#include "../include/navi.html"/]
		<!--nav 开始-->

		<!----中间内容部分---->
		<div class="box">
			<div class="map mv10">
				<img src="/${res}/images/home.png" width="20" height="18">
					<a href="${base}/">首页</a>
					> <a href="#">注册</a>
			</div>
			<div class="bigcenter">
				<form id="jvForm" action="${base}/register.jspx" method="post" style="padding-top: 0px">
					<div class="register">
						<div class="left_name">用户名：</div>
						<div class="right_input">
							<input type="text" id="username"
								vld="{required:true,rangelength:[${site.usernameMinLen},20],username:true,remote:'username_unique.jspx',messages:{remote:'<br>&nbsp;&nbsp;用户名已存在！'}}"
								name="username" class="phone"
							/>
							<!-- <br />
							&nbsp;&nbsp;用户名由3到14位的中文字符、英文字母、数字组成 -->

						</div>
						<div class="left_name">电子邮箱:</div>
						<div class="right_input">
							<input type="text" class="phone required email" id="email" maxlength="30"
								vld="{remote:'email_unique.jspx',messages:{remote:'<br>&nbsp;&nbsp;email已经被使用！'}}" name="email"
							/>
							<!-- <br />
							&nbsp;&nbsp;在忘记密码，您使用邮件通知功能时，会发送邮件到该邮箱 -->
						</div>
						<div class="left_name">密码：</div>
						<div class="right_input">
							<input type="password" class="phone required" id="password" type="password" name="password"
								vld="{required:true,rangelength:[${site.passwordMinLen},20]}"
							>
						</div>
						<div class="left_name">确认密码：</div>
						<div class="right_input">
							<input type="password" equalto="#password" vld="{required:true,rangelength:[${site.passwordMinLen},20]}"
								class="phone"
							/>
						</div>
						<div class="left_name">验证码：</div>
						<div class="right_input">
							<input type="text" id="captcha" name="captcha" maxlength="20" vld="{required:true}" class="phone" />
							<!-- <span class="cap">
								<img src="${base}/captcha.svl" id="captcha" onclick="this.src='${base}/captcha.svl?d='+new Date()*1" />
							</span> -->
						</div>

						<div class="left_name"></div>
						<div class="right_input">
							<span class="cap">
								<img src="${base}/captcha.svl" id="captcha" onclick="this.src='${base}/captcha.svl?d='+new Date()*1" />
							</span>
						</div>

						<div class="left_name"></div>
						<div class="right_input">
							<input name="" type="checkbox" id="agreement" value="" style="float: left; margin: 11px 0px 8px 10px;" onclick="">
								&nbsp;&nbsp;我已阅读并同意 <a href="${base}/terms.jspx" target="_blank">《东楚网服务条款》</a>
							<br/>
							<span id="agree" style="color: red;display:none;" >请勾选“我已阅读并同意 《东楚网服务条款》”</span>
						</div>
						<div class="but">
							<input name="" type="button" value="确认" class="sure" onclick="submitForm()">
						</div>
						<div class="but">
							<input name="" type="reset" value="取消" class="cancel">
						</div>
					</div>
				</form>
			</div>

		</div>
		[#include "../include/footer.html"/]
	</body>
</html>