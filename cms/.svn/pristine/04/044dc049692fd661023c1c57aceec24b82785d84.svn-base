<!DOCTYPE html>
<html lang="zh-CN">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>东楚网</title>
    <!-- Bootstrap -->
    <link href="/${mobileRes!}/css/bootstrap.min.css" rel="stylesheet">
    <link href="/${mobileRes!}/css/mycss.css" rel="stylesheet">
    <link href="/${mobileRes!}/css/pic/public.css" rel="stylesheet" type="text/css"/>
	<link href="/${mobileRes!}/css/pic/share.css" rel="stylesheet" type="text/css"/>
	<script src="/${mobileRes!}/js/focus/TouchSlide.1.1.js"></script>
	<link href="${resSys}/front.css" rel="stylesheet" type="text/css"/>
	<link href="${resSys}/jqueryUI/jquery.ui.css" rel="stylesheet" type="text/css"/>
	<script src="${resSys}/jquery.js" type="text/javascript"></script>
	<script src="${resSys}/jqueryUI/jquery-ui.js" type="text/javascript"></script>
	<script src="${resSys}/front.js" type="text/javascript"></script>
	<script src="/${res}/js/common.js" type="text/javascript"></script>
	<script src="/${mobileRes!}/js/jquery-1.12.3.min.js"></script>
    <script src="/${mobileRes!}/js/bootstrap.min.js"></script>
    <script type="text/javascript" src="${base}/${res}/js/dc/settitle.js"></script>
  </head>
  <body>
  [#include "../include/header_lanmu.html"/]
      <section class="cell-body">
        <div class="container-fluid">
          <div class="row">
            <div class="col-xs-12">
              <form id="baoliaoForm" action="${base}/baoliao.jspx" method="post" class="form-horizontal mar-t10 myform">
                <div class="form-group mar-lr0">
                      <input type="text" class="form-control" id="title" name="title" placeholder="请填写标题">
                </div>
                <div class="form-group mar-lr0">
                      <textarea class="form-control" id="content" name="content" placeholder="请填写爆料内容"></textarea>
                </div>
                <div class="form-group mar-lr0 bor-b pad-b5">
                      <div class="col-xs-2 padd-lr0">
                      </div>
                </div>
                <div class="form-group mar-lr0">
                      <input type="text" name="tel" class="form-control" placeholder="请填写您的手机号码">
                </div>
                <div class="form-group mar-lr0">
                      <input type="text" name="email" class="form-control" placeholder="请填写您的邮箱">
                </div>
                <div class="form-group mar-lr0">
                	<div class="col-xs-8" style="padding-left: 0">
                      <input type="text" class="form-control" style="width:50%" id="captcha" name="captcha" placeholder="验证码" maxlength="20" vld="{required:true}"/> </span>
                     </div>
                     <div class="col-xs-4 text-right">
                     	<img style="float: right;margin-top: -5px" id="blCaptcha" src="${base}/captcha.svl" onclick="this.src='${base}/captcha.svl?d='+new Date()"/>
                     </div>
                </div>
                <div class="form-group mar-lr0">
                      <a class="btn btn-red form-control"  href="javascript:void(0);" onclick="baoliaoForm()">提交爆料</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </section>
      <script type="text/javascript">
         
            function  baoliaoForm(){
            	if ($('#title').val() == '') {
    				alert('请输入标题');
    				$('#title').focus();
    				return;
    			}
    			if ($('#content').val() == '') {
    				alert('请输入内容');
    				$('#content').focus();
    				return;
    			}
    			
    			var s = $("#baoliaoForm");
    			var url = s[0].action;
    			var data = s.serialize();
    			var options = {
    	                    url: 'baoliao.jspx',
    	                    type: 'post',
    	                    dataType: 'json',
    	                    data: data,
    	                    success:  function (data) {
    		                	if(data.status==0) {
    			                    alert("提交成功");
    			                    location.href="${base}/baoliao.jspx";
    			                } else if(data.status==1) {	
    			                    alert("验证码错误");
    			                    $("#blCaptcha").click();
    			                }
    	                    }
    	                };
    	                $.ajax(options);
    	                return false;
               }
           
            </script> 
  </body>
</html>