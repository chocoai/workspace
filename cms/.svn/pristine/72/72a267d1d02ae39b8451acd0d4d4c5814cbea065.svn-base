<!DOCTYPE HTML>
<html>
<head>
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>东楚网</title>
<link rel="stylesheet" type="text/css" href="/${res}/css/index.css" />
<link rel="stylesheet" type="text/css" href="/${res}/css/global.css" />
<script src="${resSys}/jquery.js" type="text/javascript"></script>
<script src="${resSys}/front.js" type="text/javascript"></script>
<script type="text/javascript">
	
	$(document).ready(function() {
		if('${error!}' == 'org.apache.shiro.authc.UnknownAccountException'){
			$("#username_message").html('用户名不存在');
			$("#username_message").css("visibility","visible");
		}
		if('${error!}' == 'com.yhcrt.weihu.common.security.DisabledException'){
			$("#username_message").html('用户被禁用');
			$("#username_message").css("visibility","visible");
		}
		if('${error!}' == 'org.apache.shiro.authc.IncorrectCredentialsException'){
			$("#password_message").html('密码错误');
			$("#password_message").css("visibility","visible");
		}
		if('${error!}' == 'com.yhcrt.weihu.common.security.CaptchaErrorException'){
			$("#captcha_message").html('验证码错误');
			$("#captcha_message").css("visibility","visible");
		}
		/* var errorTimes = '${errorTimes!}';
		var errorRemaining = '${errorRemaining!}';
		if((errorTimes??&&errorTimes<=0 )||(errorRemaining?? && errorRemaining <= 0)){
			$(".captcha").show();
			$("#captcha").show();
			$("#captcha_message").show();
		}else{
			$(".captcha").hide();
			$("#captcha").hide();
			$("#captcha_message").hide();
		} */
		$("#username").focus(function(){
			$("#username_message").css("visibility","hidden");
		});
		$("#username").blur(function(){
			if($("#username").val()==''){
				$("#username_message").html('用户名不能为空');
				$("#username_message").css("visibility","visible");
			}
		});
		$("#password").focus(function(){
			$("#password_message").css("visibility","hidden");
		});
		$("#password").blur(function(){
			if($("#password").val()==''){
				$("#password_message").html('密码不能为空');
				$("#password_message").css("visibility","visible");
			}
		});
		$("#captcha").focus(function(){
			$("#captcha_message").css("visibility","hidden");
		});
		$("#captcha").blur(function(){
			if($("#captcha").val()==''){
				$("#captcha_message").html('验证码不能为空');
				$("#captcha_message").css("visibility","visible");
			}
		});
	});
	
	document.onkeydown=function(event){ 
		e = event ? event :(window.event ? window.event : null); 
		if(e.keyCode==13){   //回车
			submitForm();
		} 
	};
	
	function submitForm(){
		if($("#username").val()==''){
			$("#username_message").text('用户名不能为空');
			$("#username_message").css("visibility","visible");
			return ;
		}
		if($("#password").val()==''){
			$("#password_message").text('密码不能为空');
			$("#password_message").css("visibility","visible");
			return ;
		}
		if($(".captcha").css('display')=='none'){
			
		}else{
			if($("#captcha").val()==''){
				$("#captcha_message").text('验证码不能为空');
				$("#captcha_message").css("visibility","visible");
				return ;
			}
		}
		$("#loginForm").submit();
	}
</script>
</head>

<body class="body">

