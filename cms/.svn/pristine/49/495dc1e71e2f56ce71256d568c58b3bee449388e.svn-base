<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>会员登录 - ${site.name}</title>
<link href="/${res}/css/index.css" rel="stylesheet" type="text/css" />
<link href="/${res}/css/global.css" rel="stylesheet" type="text/css" />
<script src="${resSys}/jquery.js" type="text/javascript"></script>
<script src="${resSys}/front.js" type="text/javascript"></script>
<script type="text/javascript">
	$(function() {
		$("#jvForm").validate();
	});
</script>
</head>

<body>
	<body onload="MM_preloadImages('images/blog_login.png','images/wechat_login.png','images/qq_login.png')">
		<!--top 开始-->
		[#include "../include/header.html"/] 
		[#include "../include/navi.html"/]
		<!--nav 开始-->


		<!----中间内容部分---->
		<div class="box">
			<div class="map mv10">
				<img src="/${res}/images/home.png" width="20" height="18">
					<a href="${base}/">首页</a>
					> 登录 
			</div>
			<div class="bigcenter">
				<form id="jvForm" action="${base}/login.jspx" method="post">
					<input type="hidden" name="returnUrl" value="${returnUrl!}" />
					<div class="login">
						<div class="welcome">欢迎登录东楚网</div>
						<div class="left_name">账号：</div>
						<div class="right_input">
							<input type="text" id="username" name="username" class="phone required">
						</div>
						<div class="left_name">密码：</div>
						<div class="right_input">
							<input type="password" id="password" name="password" class="phone required">
						</div>
						[#if (errorTimes??&&errorTimes<=0)||(errorRemaining?? && errorRemaining<=0)]
						<div class="left_name">验证码：</div>
						<div class="right_input">
							<input type="text" id="captcha" name="captcha" class="phone required">
						</div>
						<div class="right_input2">
							<img src="${base}/captcha.svl" onclick="this.src='${base}/captcha.svl?d='+new Date()*1" />
						</div>
						[/#if]
						<div class="mess_info">
							[#if error??]
							<div class="info1">
								[#if error=="org.apache.shiro.authc.IncorrectCredentialsException"]
								<div class="msg">密码错误!</div>
								[#elseif error=="org.apache.shiro.authc.UnknownAccountException"]
								<div class="msg">用户名不存在！</div>
								[#elseif error=="com.yhcrt.weihu.common.security.CaptchaErrorException"]
								<div class="msg">验证码错误！</div>
								[#elseif error=="com.yhcrt.weihu.common.security.DisabledException"]
								<div class="msg">用户被禁用！</div>
								[/#if]
							</div>
							[/#if]
						</div>
						<div class="de_login">
							<!--<a href="${base}/member/forgot_password.jspx" style=" float:left;">忘记密码</a>-->
							<input name="" type="submit" value="登录" class="login_but">
								<a href="${base}/register.jspx" style="float: right;">现在注册</a>
						</div>
						
						<div class="left_name2"></div>
						<!-- <div class="right_input2">或使用以下方式登陆：</div>
						<ul>
							<li>
								<a href="#" onmouseout="MM_swapImgRestore()" onmouseover="MM_swapImage('Image7','','images/blog_login.png',1)">
									<img src="images/blog_login2.png" name="Image7" width="50" height="50" border="0" id="Image7" />
								</a>
							</li>
							<li>
								<a href="#" onmouseout="MM_swapImgRestore()" onmouseover="MM_swapImage('Image8','','images/wechat_login.png',1)">
									<img src="images/wechat_login2.png" name="Image8" width="50" height="50" border="0" id="Image8" />
								</a>
							</li>
							<li>
								<a href="#" onmouseout="MM_swapImgRestore()" onmouseover="MM_swapImage('Image9','','images/qq_login.png',1)">
									<img src="images/qq_login2.png" name="Image9" width="50" height="50" border="0" id="Image9" />
								</a>
							</li>
						</ul> -->
					</div>
				</form>
			</div>

		</div>
		[#include "../include/footer.html"/]
	</body>
</html>