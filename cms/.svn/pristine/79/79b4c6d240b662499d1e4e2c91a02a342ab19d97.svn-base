<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>我的物品列表 - ${site.name}</title>
<link href="${resSys}/front.css" rel="stylesheet" type="text/css"/>
<script src="${resSys}/jquery.js" type="text/javascript"></script>
<script src="${resSys}/front.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="../../${res}/css/member.css" />
<script type="text/javascript">
$(function() {
	$("#jvForm").validate();
});
function del_c_by_id(id) {

    if(confirm("您确定删除吗?")){
        var tableForm = document.getElementById("tableForm");
        tableForm.action="product_delete.jspx?ids="+id;
        tableForm.onsubmit=null;
        tableForm.submit();
    }
  
}
</script>
</head>

<body>
[#include "member_header.html"/]
<div class="container">
	 [#include "member_navi.html"/]
    <div class="mc_right">
        [#include "member_top.html"/]
        <div class="mr-top-position">
		     <div class="mr-top-tit fl">我的物品列表</div>
		    <div class="modify fr"><a href="${base}/member/product_add.jspx" target="_blank">发布物品</a></div>
		 </div>
        <div class="mc_content">   
           	<form id="tableForm" action="product_list.jspx" method="post">
            [#if pagination.list?size gt 0]
            <table border="0" cellpadding="0" cellspacing="1" bgcolor="#E4FFBB" class="tblist">
            <tr>
                <th>序号</th>
                <th>物品名称</th>
                <th>类别</th>
                <th>状态</th>
                <th>浏览</th>
                <th>发布时间</th>
                <th>操作</th>
            </tr>
            [#list pagination.list as c]
            <tr>	
                <td bgcolor="#FFFFFF">${c_index+1}</td>
                <td bgcolor="#FFFFFF"><a href="${c.url!}">${c.title?html}</a></td>
                <td bgcolor="#FFFFFF">${c.channel.name}</td>
                <td bgcolor="#FFFFFF">[#if c.changeState ?? ][#if c.changeState == 0]交换中[/#if][#if c.changeState == 1]交换结束[/#if][#else]交换中[/#if]</td> 
                <td bgcolor="#FFFFFF">${c.views}</td>
                <td bgcolor="#FFFFFF">${c.releaseDate?string('yyyy-MM-dd')}</td>
                <td bgcolor="#FFFFFF"><a href="product_edit.jspx?id=${c.id}&nextUrl=product_list.jspx">修改<a> | <a href="javascript:void(0);" onclick="del_c_by_id('${c.id!}')">删除<a>&nbsp;&nbsp;&nbsp;
                                      [#if exchangeList?size gt 0]
                                        [#assign n = 0]
                                        [#list exchangeList as ex]
                                         [#if ex.content.id == c.id]
                                         [#assign n = n+1]
                                         [/#if]
                                        [/#list]
                                        <a href="expro_list.jspx?contentId=${c.id}">${n}条交换<a>
                                      [/#if]
                                      
                </td>
            </tr>
            [/#list]
            </table>
            <input type="hidden" name="nextUrl" id="nextUrl" value="${base}/member/product_list.jspx"/>
            <input type="hidden" name="pageNo"/>
            <table width="100%" border="0" cellpadding="0" cellspacing="0"><tr><td align="center" class="pn-sp">
                共 ${pagination.totalCount} 条&nbsp;
                每页 ${pagination.pageSize} 条&nbsp;
                <input type="button" value="首 页" onclick="_gotoPage('1');"[#if pagination.firstPage] disabled="disabled"[/#if]/>
                <input type="button" value="上一页" onclick="_gotoPage('${pagination.prePage}');"[#if pagination.firstPage] disabled="disabled"[/#if]/>
                <input type="button" value="下一页" onclick="_gotoPage('${pagination.nextPage}');"[#if pagination.lastPage] disabled="disabled"[/#if]/>
                <input type="button" value="尾 页" onclick="_gotoPage('${pagination.totalPage}');"[#if pagination.lastPage] disabled="disabled"[/#if]/>&nbsp;
                当前 ${pagination.pageNo}/${pagination.totalPage} 页 &nbsp;转到第<input type="text" id="_goPs" style="width:50px" onfocus="this.select();" onkeypress="if(event.keyCode==13){$('#_goPage').click();return false;}"/>页
                <input id="_goPage" type="button" value="转" onclick="_gotoPage($('#_goPs').val());"[#if pagination.totalPage==1] disabled="disabled"[/#if]/>
            </td>
            </tr>
            </table>
            <script type="text/javascript">
            function _gotoPage(pageNo) {
                try{
                    var tableForm = document.getElementById("tableForm");
                    $("input[name=pageNo]").val(pageNo);
                    tableForm.action="product_list.jspx";
                    tableForm.onsubmit=null;
                    tableForm.submit();
                } catch(e) {
                    alert('_gotoPage(pageNo)方法出错');
                }
            }
            </script>
            [#else]
                <div>暂无发布物品</div>
            [/#if]
            </form>
    	</div>
  </div>
     <div style="clear:both"></div>
</div>
</body>
</html>
