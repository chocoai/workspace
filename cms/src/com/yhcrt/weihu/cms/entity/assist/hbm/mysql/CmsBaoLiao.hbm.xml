<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.yhcrt.weihu.cms.entity.assist">
	<class name="CmsBaoLiao" table="jc_baoliao">
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id name="id" type="integer" column="baoliao_id"><generator class="identity"/></id>
		<property name="tel" column="tel" type="string" not-null="false" />
		<property name="email" column="email" type="string" not-null="false" />
		<property name="title" column="title" type="string" not-null="false" />
		<property name="content" column="content" type="string" not-null="false" />
		<property name="reply" column="ad_reply" type="string" not-null="false" />
		<property name="replyTime" column="reply_time" type="timestamp" not-null="false" />
		<property name="commtCount" column="commt_count" type="java.lang.Integer" not-null="false" />
		<property name="readCount" column="read_count" type="java.lang.Integer" not-null="false" />
		<property name="ups" column="ups" type="java.lang.Integer" not-null="false" />
		<property name="downs" column="downs" type="java.lang.Integer" not-null="false" />
		<property name="state" column="state" type="java.lang.Integer" not-null="false" />
		<property name="createTime" column="create_time" type="timestamp" not-null="false" />
		<property name="recommend" column="is_recommend" type="java.lang.Boolean" not-null="false" />
	    <property name="checked" column="is_checked" type="java.lang.Boolean" not-null="false" />
	   <list name="pictures" table="jc_baoliao_pic">
			<cache usage="read-write"/>
			<key column="baoliao_id"/>
			<list-index column="priority"/>
			<composite-element class="BaoLiaoPicture">
				<property name="imgPath" column="img_path" type="string" length="100" not-null="true"/>
				<property name="description" column="description" type="string" length="255" not-null="false"/>
			</composite-element>
		</list>
	    <many-to-one name="user" column="user_id" class="com.yhcrt.weihu.core.entity.CmsUser" not-null="false"></many-to-one>
		<many-to-one name="admin" column="admin_id" class="com.yhcrt.weihu.core.entity.CmsUser" not-null="false"></many-to-one>
	    <many-to-one name="site" column="site_id" class="com.yhcrt.weihu.core.entity.CmsSite" not-null="true"></many-to-one>
	 </class>
</hibernate-mapping>