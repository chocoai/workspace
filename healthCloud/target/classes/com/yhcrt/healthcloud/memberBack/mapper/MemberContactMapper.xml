<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yhcrt.healthcloud.memberBack.mapper.MemberContactMapper">
	<resultMap id="BaseResultMap" type="com.yhcrt.healthcloud.memberBack.entity.MemberContact">
		<id column="cid" jdbcType="INTEGER" property="cid" />
		<result column="member_id" jdbcType="INTEGER" property="memberId" />
		<result column="type" jdbcType="INTEGER" property="type" />
		<result column="name" jdbcType="VARCHAR" property="name" />
		<result column="id_card" jdbcType="VARCHAR" property="idCard" />
		<result column="relation" jdbcType="VARCHAR" property="relation" />
		<result column="telphone" jdbcType="VARCHAR" property="telphone" />
		<result column="address" jdbcType="VARCHAR" property="address" />
		<result column="unit" jdbcType="VARCHAR" property="unit" />
		<result column="unit_address" jdbcType="VARCHAR" property="unitAddress" />
		<result column="remark" jdbcType="VARCHAR" property="remark" />
		<result column="create_time" jdbcType="VARCHAR" property="createTime" />
	</resultMap>
	
	<sql id="Example_Where_Clause">
		<where>
			<foreach collection="oredCriteria" item="criteria" separator="or">
				<if test="criteria.valid">
					<trim prefix="(" prefixOverrides="and" suffix=")">
						<foreach collection="criteria.criteria" item="criterion">
							<choose>
								<when test="criterion.noValue">
									and ${criterion.condition}
								</when>
								<when test="criterion.singleValue">
									and ${criterion.condition} #{criterion.value}
								</when>
								<when test="criterion.betweenValue">
									and ${criterion.condition} #{criterion.value} and #{criterion.secondValue}
								</when>
								<when test="criterion.listValue">
									and ${criterion.condition}
									<foreach close=")" collection="criterion.value" item="listItem" open="(" separator=",">
										#{listItem}
									</foreach>
								</when>
							</choose>
						</foreach>
					</trim>
				</if>
			</foreach>
		</where>
	</sql>
	
	<sql id="Base_Column_List">
		cid, member_id, type, name, id_card, relation, telphone, address, unit, unit_address, remark, create_time
	</sql>
	<select id="selectByExample" parameterType="com.yhcrt.healthcloud.memberBack.entity.MemberContactExample" resultMap="BaseResultMap">
		select
		<if test="distinct">
			distinct
		</if>
		<include refid="Base_Column_List" />
		from member_contact
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
		<if test="orderByClause != null">
			order by ${orderByClause}
		</if>
	</select>
	
	<!-- 根据memberId查询数据 -->
	<select id="selectByMemberId" parameterType="java.lang.Integer" resultMap="BaseResultMap">
		select
		<include refid="Base_Column_List" />
		from member_contact
		where member_id = #{memberId,jdbcType=INTEGER}
		order by create_time
	</select>
	
	<delete id="deleteByPrimaryKey" parameterType="java.lang.Integer">
		delete from member_contact where cid = #{cid,jdbcType=INTEGER}
	</delete>
	
	<delete id="deleteByExample" parameterType="com.yhcrt.healthcloud.memberBack.entity.MemberContactExample">
		delete from member_contact
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
	</delete>
	
	<!-- 批量新增,修改 -->
	<insert id="addBatch" parameterType="list">
		insert into member_contact (cid, member_id, type, name, id_card, relation, telphone, 
		address, unit, unit_address, remark, create_time )
		values
        <foreach collection="list" item="item" separator=",">
            (#{item.cid}, #{item.memberId}, #{item.type}, #{item.name}, 
			#{item.idCard}, #{item.relation}, #{item.telphone}, #{item.address},
			#{item.unit}, #{item.unitAddress}, #{item.remark}, DATE_FORMAT(now(),'%Y-%m-%d %H:%i:%s'))
        </foreach>  
	</insert>
	
	<select id="countByExample" parameterType="com.yhcrt.healthcloud.memberBack.entity.MemberContactExample" resultType="java.lang.Long">
		select count(*) from member_contact
		<if test="_parameter != null">
			<include refid="Example_Where_Clause" />
		</if>
	</select>
	
		
</mapper>