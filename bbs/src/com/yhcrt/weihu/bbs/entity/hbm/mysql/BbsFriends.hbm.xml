<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="com.yhcrt.weihu.bbs.entity">
	<class
		name="BbsFriends"
		table="bbs_friends"
		>
		<meta attribute="sync-DAO">false</meta>
		<cache usage="read-write"/>
		<id
			name="id"
			type="java.lang.Integer"
			column="friends_id"
			>
			<generator class="native"/>
		</id>
		<property
			name="createTime"
			column="create_time"
			type="timestamp"
			not-null="true"
			/>
		<many-to-one
			name="user"
			column="user_id"
			class="BbsUser"
			not-null="true"
			>
		</many-to-one>
		<many-to-one
			name="friend"
			column="friend_id"
			class="BbsUser"
			not-null="true"
			>
		</many-to-one>
	</class>	
</hibernate-mapping>