@charset "utf-8";
/* CSS Document */

*{ margin:0; padding:0; font-family:"微软雅黑"; text-shadow:none;}
body {min-width: 320px;}
a{ text-decoration:none;}
ul{ list-style-type:none;}
input{ outline:none;}
img{ border:0;}

@media screen and (max-width: 372px) and (min-width: 320px){
body {
font-size: 12px;
}}
@media screen and (max-width: 425px) and (min-width: 373px){
body {
font-size: 14px;
}}
@media screen and (max-width: 479px) and (min-width: 426px){
body {
font-size: 16px;
}}
@media screen and (max-width: 532px) and (min-width: 480px){
body {
font-size: 18px;
}}
@media screen and (max-width: 585px) and (min-width: 533px){
body {
font-size: 20px;
}}
@media screen and (max-width: 640px) and (min-width: 586px){
body {
font-size: 22px;
}}
@media screen and (min-width: 640px){
body {
font-size: 24px;
}}



.lanmu { width:100%;margin-top:20px; background-color:#fff;box-shadow:0px 2px 2px #d1d1d1;}
.lanmu .lamu_list { width:100%; display:table; margin:1em 0 0;}
.lanmu .lamu_list li { width:25%; text-align:center; display:table-cell;}
.lanmu .lamu_list li .lanmu_ico { width:100%;}
.lanmu .lamu_list li .lanmu_ico img { width:4em; height:4em;}
.lanmu .lamu_list li .lanmu_tit { width:100%; display:block; line-height:1.4em; font-size:1em;}