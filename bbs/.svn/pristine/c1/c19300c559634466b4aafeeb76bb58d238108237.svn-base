					</form>
				</div>
			</div>
		</div>
	</div>

	<!------------------中间内容部分------------------------>
	<div class="big_center">
		<!------当前位置------>
		<div class="location">
			<i></i>
			&nbsp;<a href="${base}/">东楚论坛</a>
			&nbsp;>
			&nbsp;<a href="javascript:void(0);">论坛栏目</a>
			&nbsp;>
			&nbsp;<a href="${forum.url}">${forum.title}</a>
			&nbsp;>
			&nbsp;${topic.title}
		</div>

		<!----帖子详情----->
		<div class="tie_l">
			<div class="tie_con">
				<div class="tie_con_hd">
					<div class="tie_author">
						[#if user?? && user.id==topic.creater.id]
						<a class="a_img" target="_blank" href="${base}/member/index.jhtml">
							[#if topic.creater.avatar??]
							<img src="${topic.creater.avatar!}" alt="" />
							[#else]
							<img src="${base}/images/default_user.jpg" alt="" />
							[/#if]
						</a>
						<a class="name" target="_blank" href="${base}/member/index.jhtml">${topic.creater.username}</a>
						[#else]
						<a class="a_img" target="_blank" href="${base}/personal/other_information${topic.creater.id}.jspx">
							[#if topic.creater?? && topic.creater.avatar??]
							<img src="${topic.creater.avatar!}" alt="" />
							[#else]
							<img src="${base}/images/default_user.jpg" alt="" />
							[/#if]
						</a>
						<a class="name" target="_blank" href="${base}/personal/other_information${topic.creater.id}.jspx">${topic.creater.username}</a>
						[/#if]
						<!-----用户个人简介开始----->
						<div class="user_card_box">
							<b></b>
							<div class="user_card">
								<div class="user_card_l">
									[#if user?? && user.id==topic.creater.id]
									<a target="_blank" href="${base}/member/index.jhtml">
										[#if topic.creater.avatar??]
										<img src="${topic.creater.avatar!}" alt="" />
										[#else]
										<img src="${base}/images/default_user.jpg" alt="" />
										[/#if]
									</a>
									[#else]
									<a target="_blank" href="${base}/personal/other_information${topic.creater.id}.jspx">
										[#if topic.creater?? && topic.creater.avatar??]
										<img src="${topic.creater.avatar!}" alt="" />
										[#else]
										<img src="${base}/images/default_user.jpg" alt="" />
										[/#if]
									</a>
									[/#if]
									
								</div>
								<div class="user_card_r">
									<p class="user_card_r01">
										<span class="user_card_name">
											[#if user?? && user.id==topic.creater.id]
											<a target="_blank" href="${base}/member/index.jhtml">${topic.creater.username}</a>
											[#else]
											<a target="_blank" href="${base}/personal/other_information${topic.creater.id}.jspx">${topic.creater.username}</a>
											[/#if]
										</span>
										[#if user??]
											[#if user.id != topic.creater.id && isConcern == 1]
											<span class="addcare post${topic.creater.id}" onclick="concern('${topic.creater.id}','${user.id}')">取消关注</span>
											[#elseif user.id == topic.creater.id]
											[#else]
