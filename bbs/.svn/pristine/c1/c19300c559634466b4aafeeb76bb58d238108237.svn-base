<script type="text/javascript">
/*弹框JS内容*/
	jQuery(document).ready(
		function() {
			//关闭窗口
			$('#caseHistory1').on(
				'click',
				function(event) {
					if ($(event.target).is('.close')
							|| $(event.target).is('#caseHistory1')) {
						event.preventDefault();
						$(this).removeClass('is-visible3');
						$("#apply_user_id").val("");
					}
				});

			//ESC关闭
			$(document).keyup(function(event) {
				if (event.which == '27') {
					$('#caseHistory1').removeClass('is-visible3');
					$("#apply_user_id").val("");
				}
			});
	});
	
	function doUpload() {
		$('#caseHistory1').removeClass('is-visible3');
		var formData = new FormData(document.forms.namedItem("applyForm"));
		var url = "${base}/member/applyJson.jhtml";
		$.ajax({
			url : url,
			type : 'POST',
			data : formData,
			async : false,
			cache : false,
			dataType : 'json',
			contentType : false,
			processData : false,
			success : function(data) {
				if(data.status == 1){
					alert(data.msg);
					location.reload();
				}else{
					alert(data.msg);
				}
				$('#applyDesc').val('');
				$("#apply_user_id").val("");
			}
		});
	}
	
	function submitForm(){
		if('${user!}'==''){
			location.href = "${base}/login.jspx";
		}else{
			$("#jvForm").submit();
		}
	}
</script>
