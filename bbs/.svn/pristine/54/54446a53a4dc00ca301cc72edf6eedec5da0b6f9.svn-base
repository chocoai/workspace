					</div>
					<form method="post" action="" id="jvForm">
					<ul class="tie_list">
						[@my_topic createrId=user.id tpl='0' topLevel='0' count='10']
       					[#list tag_pagination.list as topic]
       					<li>
							<input type="checkbox" name="topicIds" value="${topic.id}">
							<p class="tie_title">
								<a href="${topic.url}">${topic.title}</a>
							</p>
							<p class="tie_write">
								<a href="javascript:void(0);">${topic.creater.username}</a>
								<span class="date">${topic.createTime?string("yyyy-MM-dd")}</span>
							</p>
							<p class="tie_count">${topic.replyCount}/${topic.viewCount}</p>
							<p class="tie_from">
