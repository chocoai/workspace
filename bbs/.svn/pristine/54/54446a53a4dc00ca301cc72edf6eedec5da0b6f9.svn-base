<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>东楚论坛</title>
<link href="${base}/style/main.css" rel="stylesheet" type="text/css">
<link href="${base}/style/lanmu.css" rel="stylesheet" type="text/css">
<link href="${base}/style/personal.css" rel="stylesheet" type="text/css">
<link href="${resSys}/front.css" rel="stylesheet" type="text/css"/>
<script type="text/javascript" src="${base}/js/jquery.js"></script>
<script type="text/javascript" src="${base}/js/popwin.js"></script>
<script type="text/javascript" src="${base}/js/jquery-1.11.1.min.js"></script>
<script type="text/javascript">
	$(document).ready(function() {
		$(".shezhi").click(function() {
			if ($(".setup_list").css('display') == 'none') {
				$(".setup_list").slideDown(200);
				$(".sev b").removeClass('slidedown');
				$(".sev b").addClass('slideup');
			} else {
				$(".setup_list").slideUp(200);
				$(".sev b").removeClass('slideup');
				$(".sev b").addClass('slidedown');

			}
		});
		//全选与反选
		$("#all").click(function(){
			if($("#all").prop("checked")){
				$("input[name='topicIds']").prop("checked",true);
			}else{
				$("input[name='topicIds']").prop("checked",false);
			}
		});
		$("input[type='checkbox'][name='topicIds']").click(function(){
		    if (!$("input[type='checkbox'][name='topicIds']:checked").checked) {  
		        $("#all").prop("checked", false);  
		    } 
		    var chsub = $("input[type='checkbox'][name='topicIds']").length; 
		    var checkedsub = $("input[type='checkbox'][name='topicIds']:checked").length;
		    if (checkedsub == chsub) {  
		        $("#all").prop("checked", true);  
		    }  
 		});
	});
	
	function manageTopic(url) {
		var batchChecks = document.getElementsByName('topicIds');
		var hasChecked = false;
		for(var i=0; i<batchChecks.length; i++) {
			if(batchChecks[i].checked) {
				hasChecked = true;
				break;
			}
		}
		if(!hasChecked) {
			alert('请选择要操作的数据！');
			return;
		}
		if(!confirm("确认删除主题吗?")) {
			return;
		}
		var form = document.getElementById('jvForm');
		form.action=url;
		form.submit();
   }
	
	function sign(userId){
		//alert(userId);
		if(userId == ''){
			location.href = "${base}/login.jspx";
			return ;
		}
		$.ajax({
			url:"/bbs/member/point_sign.jspx",
			type:"post",
			dataType:"text",
			success:function(data){
				if(data == -1){
					alert("打卡失败");
				}else if(data == 1){
					location.reload();
				}
			}
		});
	}
</script>
</head>

